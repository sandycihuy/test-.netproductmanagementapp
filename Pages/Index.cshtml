@page
@model IndexModel
@using Microsoft.AspNetCore.Identity
@using ProductManagementApp.Models
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Dashboard";
    var isAuthenticated = SignInManager.IsSignedIn(User);
    var userName = User.Identity?.Name ?? "Guest";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">
        <i class="fas fa-tachometer-alt me-2"></i>@ViewData["Title"]
    </h1>
    <div class="d-flex align-items-center">
        <button id="theme-toggle" class="btn btn-sm btn-outline-secondary me-2" type="button">
            <i class="fas fa-moon"></i>
        </button>
        <div class="dropdown">
            <button class="btn btn-sm btn-outline-primary dropdown-toggle" type="button" id="quickActionsDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fas fa-bolt me-1"></i>Quick Actions
            </button>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="quickActionsDropdown">
                <li><a class="dropdown-item" asp-page="/Products/Create"><i class="fas fa-plus me-2"></i>Add New Product</a></li>
                <li><a class="dropdown-item" asp-page="/Categories/Create"><i class="fas fa-tag me-2"></i>Add New Category</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" asp-page="/Products/Index"><i class="fas fa-boxes me-2"></i>View All Products</a></li>
                @if (User.IsInRole("Admin"))
                {
                    <li><a class="dropdown-item" href="#"><i class="fas fa-users-cog me-2"></i>Manage Users</a></li>
                }
            </ul>
        </div>
    </div>
</div>

@if (!isAuthenticated)
{
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="fas fa-box-open fa-4x text-primary mb-3"></i>
                        <h2>Welcome to Product Management</h2>
                        <p class="lead text-muted">Please sign in to manage your products and categories</p>
                    </div>
                    <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                        <a asp-page="/Account/Login" class="btn btn-primary btn-lg px-4 me-sm-3" style="cursor: pointer; pointer-events: auto; z-index: 1000; position: relative;">
                            <i class="fas fa-sign-in-alt me-2"></i>Sign In
                        </a>
                        <a asp-page="/Account/Register" class="btn btn-outline-secondary btn-lg px-4" style="cursor: pointer; pointer-events: auto; z-index: 1000; position: relative;">
                            <i class="fas fa-user-plus me-2"></i>Register
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <!-- Stats Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-6 col-lg-3">
            <div class="card border-start border-primary border-4 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-muted mb-2">Total Products</h6>
                            <h2 class="mb-0">@Model.TotalProducts</h2>
                        </div>
                        <div class="bg-primary bg-opacity-10 p-3 rounded-circle">
                            <i class="fas fa-box text-primary fa-2x"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="text-success fw-bold">
                            <i class="fas fa-arrow-up"></i> @Model.ActiveProductsPercentage% Active
                        </span>
                        <span class="text-muted ms-2">of total products</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card border-start border-success border-4 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-muted mb-2">Categories</h6>
                            <h2 class="mb-0">@Model.TotalCategories</h2>
                        </div>
                        <div class="bg-success bg-opacity-10 p-3 rounded-circle">
                            <i class="fas fa-tags text-success fa-2x"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="text-muted">@Model.ProductsPerCategory products per category</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card border-start border-info border-4 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-muted mb-2">Total Value</h6>
                            <h2 class="mb-0">@Model.TotalInventoryValue.ToString("C")</h2>
                        </div>
                        <div class="bg-info bg-opacity-10 p-3 rounded-circle">
                            <i class="fas fa-dollar-sign text-info fa-2x"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="text-muted">@Model.AverageProductPrice.ToString("C") avg. price</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card border-start border-warning border-4 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-muted mb-2">Recent Activity</h6>
                            <h2 class="mb-0">@Model.RecentActivities.Count</h2>
                        </div>
                        <div class="bg-warning bg-opacity-10 p-3 rounded-circle">
                            <i class="fas fa-history text-warning fa-2x"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="text-muted">@Model.LastUpdatedTime</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Recent Products -->
        <div class="col-lg-8">
            <div class="card h-100">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-boxes me-2"></i>Recent Products
                    </h5>
                    <a asp-page="/Products/Index" class="btn btn-sm btn-outline-primary">View All</a>
                </div>
                <div class="card-body p-0">
                    @if (Model.RecentProducts.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Product</th>
                                        <th>Category</th>
                                        <th>Price</th>
                                        <th>Status</th>
                                        <th>Added</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in Model.RecentProducts)
                                    {
                                        <tr style="cursor: pointer;" onclick="window.location.href='/Products/Details?id=@product.Id';">
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                                                    {
                                                        <img src="@($"~/uploads/products/{product.ImageUrl}")" 
                                                             class="rounded me-3" 
                                                             alt="@product.Name" 
                                                             style="width: 40px; height: 40px; object-fit: cover;">
                                                    }
                                                    <div>
                                                        <div class="fw-semibold">@product.Name</div>
                                                        <small class="text-muted">@(product.Description?.Length > 30 ? product.Description.Substring(0, 30) + "..." : product.Description)</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>@(product.Category?.Name ?? "Uncategorized")</td>
                                            <td>@product.Price.ToString("C")</td>
                                            <td>
                                                <span class="badge @(product.IsActive ? "bg-success" : "bg-secondary") rounded-pill">
                                                    @(product.IsActive ? "Active" : "Inactive")
                                                </span>
                                            </td>
                                            <td>@product.CreatedAt.ToString("MMM d, yyyy")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                            <p class="text-muted">No products found. Add your first product to get started.</p>
                            <a asp-page="/Products/Create" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>Add Product
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="col-lg-4">
            <div class="card h-100">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="fas fa-history me-2"></i>Recent Activity
                    </h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.RecentActivities.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var activity in Model.RecentActivities)
                            {
                                <div class="list-group-item border-0 py-3">
                                    <div class="d-flex">
                                        <div class="flex-shrink-0">
                                            <div class="bg-@activity.Color bg-opacity-10 text-@activity.Color rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                <i class="fas fa-@activity.Icon"></i>
                                            </div>
                                        </div>
                                        <div class="ms-3">
                                            <div class="d-flex justify-content-between">
                                                <h6 class="mb-1">@activity.Title</h6>
                                                <small class="text-muted">@activity.TimeAgo</small>
                                            </div>
                                            <p class="mb-0 small text-muted">@activity.Description</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-history fa-3x text-muted mb-3"></i>
                            <p class="text-muted">No recent activities to display.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}
